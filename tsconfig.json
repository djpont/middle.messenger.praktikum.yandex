{
  "include": [
	"src",
	"declaration.d.ts"
  ],
  "compilerOptions": {
	"module": "commonjs",
	"target": "es2016",
	"sourceMap": true,
	"moduleResolution": "Node",
	"baseUrl": "./",
	"paths": {
	  "~*": ["./*"]
	},
	"noImplicitAny": true,
	"noUnusedLocals": false,		// true
	"noUnusedParameters": true,
	"strictNullChecks": true,
	"outDir": "dist",
	"declaration": false,
	"isolatedModules": false
  },
  "exclude": [
	"node_modules"
  ]
}
