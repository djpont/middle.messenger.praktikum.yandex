{
	"include": [
		"src",
		"declaration.d.ts"
	],
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"module": "es6",
		"target": "es5",
		"allowJs": true,
		"sourceMap": true,
		"moduleResolution": "Node",
		"baseUrl": "./",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictNullChecks": true,
		"outDir": "dist",
		"declaration": false,
		"isolatedModules": true,
		"esModuleInterop": true,
		"suppressImplicitAnyIndexErrors": true,
		"lib": [
			"dom",
			"ES2018"
		],
	},
	"exclude": [
		"node_modules",
		"**/test.ts"
	],
	"files": ["src/index.ts"]
}
